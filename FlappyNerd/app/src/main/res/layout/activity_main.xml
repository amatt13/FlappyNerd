<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@mipmap/background"
    tools:context="com.example.heider.flappynerd.MainActivity"
>

  <ImageButton
      android:layout_marginTop="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@mipmap/logo12"
      android:id="@+id/imageButtonLogo"
      android:layout_gravity="center_horizontal"
  />

  <ImageView
      android:layout_marginTop="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/imageView2"
      android:layout_gravity="center_horizontal"
      android:background="@mipmap/logotext"
  />

  <EditText
      android:layout_marginTop="30dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/NameEditText"
      android:layout_gravity="center_horizontal"
      android:hint="Enter Name"
      android:textSize="40sp"
      android:cursorVisible="false"
      android:textAlignment="center"
      android:textCursorDrawable="@null"
      android:textColorHint="#ffffff"
      android:textColor="#ffffff"
      android:inputType="textCapWords"
      android:background="@null"
      android:focusable="true"
      android:text=""
  />

  <EditText
      android:layout_marginTop="30dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/GameEditText"
      android:layout_gravity="center_horizontal"
      android:hint="Game Pin"
      android:textSize="40sp"
      android:cursorVisible="false"
      android:textAlignment="center"
      android:textCursorDrawable="@null"
      android:textColorHint="#ffffff"
      android:textColor="#ffffff"
      android:inputType="textCapWords"
      android:background="@null"
      android:focusable="true"
      android:text=""
  />

  <ImageButton
      android:layout_width="186dp"
      android:layout_height="186dp"
      android:layout_marginTop="30dp"
      android:id="@+id/imageButton"
      android:background="@mipmap/button_off"
      android:layout_gravity="center"
  />

</LinearLayout>
